<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
		<!--Fatabase connection settings-->
		<property name="Connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/hibernateTutorials</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>
		
		<!--JDBC connection pool(use build in )-->
		<property name="connection.pool_size">1</property>
		
		<!--SQL dielect-->
		<property name="dialect">org.hibernate.dialect.MySQLMyISAMDialect</property>
		
		<!--Disable the second level cache-->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		
		<!--Echo all SQL executed to stdio-->
		<property name="show_sql">true</property>
		
		<!--Drop existing table and create new one-->
		<property name="hbm2ddl.auto">create</property>
		
		<!--Mention here all the models class along with there packages name-->
		<mapping class="com.aeshwer.hibernate.Student_Info"/>
      
    </session-factory>
</hibernate-configuration>
